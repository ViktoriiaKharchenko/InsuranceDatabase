@model InsuranceDatabase.Clients

@{
    ViewData["Title"] = "Details";
}



    <div>
        <hr />
        <h4>@ViewBag.ClientName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                <text>@ViewBag.Day.@ViewBag.Month.@ViewBag.Year</text>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Passport)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Passport)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>
<p><a asp-action="ClientsDocuments" asp-route-id="@ViewBag.ClientId">Переглянути документи клієнта</a></p>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись</a>
</div>
